{
  "name": "@hexlet/code",
  "version": "1.0.0",
  "type": "module",
  "description": "Generate Difference",
  "main": "bin/gendiff.js",
  "bin": {
    "gendiff": "bin/gendiff.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "posttest:coverage": "cat coverage/coverage-final.json | lcov-result-merger > coverage/lcov.info"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["lcov", "text"],
    "testResultsProcessor": "jest-sonar-reporter",
    "transform": {},  
    "moduleFileExtensions": ["js", "json", "jsx", "mjs"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"  
  }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "11.0.0",
    "lodash": "^4.17.21",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/create-config": "^1.10.0",
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint": "^9.33.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-sonar-reporter": "^2.0.0",
    "lcov-result-merger": "^5.0.1"
  }
}
